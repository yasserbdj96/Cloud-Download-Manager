{
    "manifest_version": 3,
    "name": "Cloud Download Manager",
    "version": "1.2",
    "description": "Advanced download manager with background transfers",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
      "storage",
      "contextMenus",
      "alarms",
      "downloads",
      "notifications"
    ],
    "host_permissions": ["*://*/*"],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    }
}